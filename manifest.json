{
  "manifest_version": 2,

  "name": "Github JIRA linking",
  "description": "This extension automatically links to JIRA on Github pages for Nerdwallet issues.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://www.github.com/*", "https://github.com/*"],
      "js": ["jquery-2.1.3.min.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"]
  }
}
